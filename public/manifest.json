{
  "manifest_version": 3,

  "name": "Honban Alert",
  "description": "開発者向けツール。本番環境として指定したドメインのWebページを表示している際にアラートを表示します。",
  "version": "1.1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": {
      "16": "honban_alert_icon.png"
    },
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/vendor.js", "js/content_script.js"],
        "css": ["content.css"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage"],

  "host_permissions": [
    "<all_urls>"
  ]
}
